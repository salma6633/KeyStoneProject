{% extends 'home/back.html.twig' %}

{% block body %}
<section class="profile-section py-5" style="margin-top: 20px; margin-left:200px;margin-bottom: 60px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6"> 
                <div class="profile-header mb-4 text-center">
                    <a><img src="/img/bg-img/profile-icon-9.png" class="profile-icon" alt="Profile Icon"></a>
                    <h3 class="mt-3">Update Your Profile</h3>
                </div>
                {{ form_start(form, {'attr': {'class': 'profile-form'}}) }}
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.lastName, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.lastName) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.phone, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.phone) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-dark">Want to change your password?</h5>
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.oldPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.oldPassword, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.oldPassword) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.newPassword.first, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.newPassword.first) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.newPassword.second) }}
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-custom w-100">
                        <i class="bi bi-save"></i> Update Profile
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">

<style>
    .profile-section {
        background-color: #f4f4f4;
        padding: 60px 0;
    }
    .profile-header {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .profile-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
    }
    .profile-header h3 {
        color: #333;
        font-weight: bold;
    }
    .profile-form .form-label {
        font-weight: 600;
        color: #333;
    }
    .profile-form .form-control {
        border-radius: 5px;
        border: 1px solid #ddd;
        padding: 10px; 
        font-size: 14px;
    }
    .btn-custom {
        background-color: #c9302c;
        border-color: #c9302c;
        color: #fff;
        padding: 10px;
        border-radius: 5px;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }
    .btn-custom:hover {
        background-color: #c9302c;
        border-color: #c9302c;
    }
    .text-primary {
        color: #007bff;
    }
    .text-dark {
        color: #333;
    }
</style>
{% endblock %}
