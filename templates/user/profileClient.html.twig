{# templates/user/profile.html.twig #}
{% extends 'home/index.html.twig' %}

{% block body %}
<section style="margin-top: 100px; margin-bottom: 60px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-dark text-white text-center" >
                       <a><img src="/img/bg-img/profile-icon-9.png" class="profile-icon" alt="Profile Icon" width="50" height="50"></a>

                        <h3 class="mb-0 text-center">Profile</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'profile-form'}}) }}
                            <div class="form-row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.name) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.lastName, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.lastName) }}
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.phone, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.phone) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                            <div class="form-row">
                   <h2 style="color:white;"> Want to change your password?</h2>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.oldPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.oldPassword, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.oldPassword) }}                                
                                    <a href="{{ path('app_forgot_password') }}" class="text-white">Forgot password?</a>

                                </div>
                            </div>
                                                        <div class="form-row">

                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.newPassword.first, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.newPassword.first) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.newPassword.second) }}
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary w-100">Update Profile</button>
                            </div>
                        {{ form_end(form) }}

                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
<style>
    .profile-section {
        padding: 50px 0;
    }

    .card {
        border-radius: 12px;
        background-color: #1A1A1A;
        border: none;
    }

    .card-header {
        background-color: #1A1A1A;
        color: #FFFFFF;
    }
    .card-header h3 {
        color: #FFFFFF;
    }

    .card-body {
        padding: 2rem;
        color: #FFFFFF;
    }

    .btn-primary {
        background-color: #FF0000;
        border-color: #FF0000;
        padding: 12px;
        font-size: 16px;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #c9302c;
        border-color: #c9302c;
    }

    .form-label {
        font-weight: 500;
        color: #FFFFFF;
    }

    .form-control {
        border-radius: 8px;
        box-shadow: none;
        color: #FFFFFF;
        background-color: #343a40;
        border: 1px solid #6c757d;
        transition: border-color 0.3s ease;
    }

    .form-control::placeholder {
        color: #6c757d;
    }

    .form-control:focus {
        border-color: #FF0000;
        background-color: #454d55;
        color: #FFFFFF;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
    }
</style>
{% endblock %}
