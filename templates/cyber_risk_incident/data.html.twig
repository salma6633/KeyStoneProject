{% extends 'home/index.html.twig' %}

{% block body %}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.css" rel="stylesheet">

<div class="welcome-banner text-white text-center d-flex align-items-center justify-content-center">
    <h1 class="mb-0">Report a Cyber Risk Incident</h1>
</div>

<section style="margin-top: 50px; margin-bottom: 60px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'cyber-risk-form'}}) }}
                            {% for field in form %}
                                <div class="form-group mb-4">
                                    <label class="form-label" for="{{ field.vars.id }}">{{ form_label(field) }}</label>
                                    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(field) }}
                                </div>
                            {% endfor %}
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">{{ button_label|default('Submit') }}</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.form-check-label {
    display: block; /* Makes sure each label is on its own line */
    word-wrap: break-word; /* Ensures long words wrap to the next line */
}

 .welcome-banner {
        position: relative;
        border-radius: 0;
        margin-top: 108px;
        background-image: url('/img/bg-img/backbg.jpg'); 
        background-size: cover;
        background-position: center;
        color: white;
        height: 270px;
    }
    .welcome-banner::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6); /* Slightly lighter overlay */
        z-index: 1;
    }
    .welcome-banner h1 {
        position: relative;
        z-index: 2;
    }

    .card {
        border-radius: 8px;
        background-color: #2a2a2a; /* Softer dark gray */
        border: none;
    }

    .card-body {
        padding: 2rem;
        color: #FFFFFF;
        border-top: 3px solid #CC0000; /* Softer red */
    }

    .btn-primary {
        background-color: #CC0000;
        border-color: #CC0000;
        padding: 12px;
        font-size: 15px;
        border-radius: 6px;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #b30000;
        border-color: #b30000;
    }

    .form-label {
        font-weight: 500;
        color: #FFFFFF; 
        font-size: 1rem;
    }

    .form-control {
        border-radius: 6px;
        box-shadow: none;
        color: #FFFFFF;
        background-color: #a35252; /* Slightly lighter gray */
        border: 1px solid #ffffff;
        transition: border-color 0.3s ease;
    }

    .form-control::placeholder {
        color: #ffffff;
    }

    .form-control:focus {
        border-color: #9e0000;
        background-color: #4a4a4a;
        color: #FFFFFF;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border-radius: 6px;
        padding: 10px;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-radius: 6px;
        padding: 10px;
        border: 1px solid #f5c6cb;
    }

    input[type="file"] {
        color: #ffffff; /* Texte blanc */
        background-color: #a35252; /* Fond rouge clair */
        border: 1px solid #ffffff; /* Bordure */
        border-radius: 6px;
        padding: 6px;
        font-size: 1rem;
        cursor: pointer;
    }

    input[type="file"]::-webkit-file-upload-button {
        color: #ffffff; /* Texte du bouton */
        background-color: #CC0000; /* Couleur du bouton */
        border: 2px solid #ffffff;
        border-radius: 6px;
        padding: 6px;
        cursor: pointer;
    }

    input[type="file"]::-ms-browse {
        color: #ffffff;
        background-color: #CC0000;
        border: 1px solid #ffffff;
        border-radius: 6px;
        padding: 6px;
        cursor: pointer;
    }

</style>
{% endblock %}
